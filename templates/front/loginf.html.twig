                    <!-- IF MAIL SENT SUCCESSFULLY -->
                    <h6 class="text-success">Your message has been sent successfully. </h6>

                    <!-- IF MAIL SENDING UNSUCCESSFULL -->
                    <h6 class="text-danger">E-mail must be valid and message must be longer than 1 character.</h6>


                    <div class="col-md-6 col-sm-6">
                        <input type="email" class="form-control" id="cf-email" name="email" placeholder="Adresse Email">

                  <a style="font-size: 17px" href="{{ path("entermail")}}">Mot de passe oublié ?</a>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <input type="password" class="form-control" id="cf-mdp" name="password" placeholder="Mot de passe">
                    </div>

 
                    <div class="col-md-offset-4 col-md-4 col-sm-offset-4 col-sm-4">

                        <div class="section-btn">
                
                          <a href="{{ path("connect_google_start") }}" class="google btn">
          <i class="fa fa-google fa-fw"></i> Login with Google
        </a>
                            <a class="github btn" href="{{ path("loginf_github") }}">
                                <i class="fa fa-github fa-fw"></i> Login with Github
                            </a>
                            <br>
                            <br>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <button type="submit" class="form-control" id="cf-submit" name="submit"><span data-hover="Envoyer">Connecter</span></button>
                        </div>
                    </div>

                </form>
            </div>

        </div>
